<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codes.pro.passholder.PasswordFragment"
    android:orientation="vertical"
    android:id="@+id/menageLayout"
    android:weightSum="1">

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add another password"
        android:id="@+id/newPass"
        android:layout_gravity="center_horizontal"
        android:onClick="addDialog" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Modify password"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="modifyDialog"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Remove password"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="removeDialog"/>

</LinearLayout>
